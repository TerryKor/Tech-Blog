<section class="justify-self-center bg-[rgb(186,220,157)]">

 
 {{#each posts as |post|}}
<a class="grid justify-items-center mt-6" href="/editPost">
      <div
        class="flex flex-col text-lg w-11/12 border-solid border-4 border-[rgb(46,20,20)]"
      >
        <div
          class="flex flex-row justify-between pt-2 pb-2 pl-3 pr-3 text-[rgb(186,220,157)] bg-[rgb(46,20,20)]"
        >
          <p class="font-bold">{{post.title}}</p>
          <p>Posted by {{post.author.username}} on {{format_date post.post_created_date}}</p>
        </div>

        <p class="p-3">
         {{post.content}}
        </p>
      </div>
    </a>

    {{/each}}

    <div class="grid justify-items-center mt-6">
