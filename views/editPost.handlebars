 <section class="justify-self-center bg-[rgb(186,220,157)]">
  <h1 class="bg-[rgb(46,20,20)] text-[rgb(186,220,157)] p-2 pl-[4vw] text-xl">Edit post</h1>

    <div class="grid justify-items-center mt-6">
      <div
        class="flex flex-col text-lg w-11/12 border-solid border-4 border-[rgb(46,20,20)]"
      >
        <div class="pt-2 pb-2 pl-3 text-[rgb(186,220,157)] bg-[rgb(46,20,20)]">
          <p class="font-bold">Edit Post</p>
        </div>

        <div class="pl-3 pt-2 font-bold">
          <p>Title</p>
        </div>

        <div class="pl-3">
          <input id="titleData"
            class="w-[99%] h-9 rounded-md pl-2"
            type="text"
            placeholder="{{post.title}}"
          />
        </div>

        <div class="pl-3 pt-2 font-bold">
          <p>Content</p>
        </div>

        <div class="pl-3">
          <textarea id="contentData"
            class="w-[99%] text-start p-2"
            rows="5"
            cols="5"
            name="comment"
            form="usrform"
            placeholder="{{post.content}}"
          ></textarea>
        </div>

        <div id="updateButton"
          class="pl-3 pt-1 mt-2  text-[rgb(186,220,157)] hover:text-[rgb(124,238,24)] font-bold"
        >
          <button
            class="bg-[rgb(96,96,96)] hover:bg-[rgb(128,128,128)] w-[99%] h-9 rounded-md pl-2 transition ease-in-out hover:scale-x-90 hover:duration-700 duration-700"
          >
            Update Post
          </button>
        </div>

        <div id="deleteButton"
        class="pl-3 pt-1 mt-1 mb-5 text-[rgb(186,220,157)] hover:text-[rgb(255,20,20)] font-bold"
      >
        <button
          class="bg-[rgb(96,96,96)] hover:bg-[rgb(128,128,128)] w-[99%] h-9 rounded-md pl-2 transition duration-700 ease-in-out hover:scale-x-90 hover:duration-700 duration-700"
        >
          Delete
        </button>
      </div>
          
        </div>
      </div>
    </div>
    <script src="/js/editPost.js"></script>
 </section>