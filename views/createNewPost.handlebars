<section class="justify-self-center bg-[rgb(186,220,157)]">
<div class="grid justify-items-center mt-6">
      <div
        class="flex flex-col text-lg w-11/12 border-solid border-4 border-[rgb(46,20,20)]"
      >
        <div class="pt-2 pb-2 pl-3 text-[rgb(186,220,157)] bg-[rgb(46,20,20)]">
          <p class="font-bold">Create New Post</p>
        </div>

        <div class="pl-3 pt-2 font-bold">
          <p>Title</p>
        </div>

        <div class="pl-3 ">
          <input id="titleField"
            class="w-[99%] h-9 rounded-md pl-2 focus:outline-none focus:ring-2 focus:ring-blue-600 "
            type="text"
            placeholder="Title..."
          />
        </div>

        <div class="pl-3 pt-2 font-bold">
          <p>Content</p>
        </div>

        <div class="pl-3">
          <textarea id="contentField"
            class="w-[99%] text-start p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
            rows="5"
            cols="5"
            name="comment"
            form="usrform"
            placeholder="Your comment here... "
          ></textarea>
        </div>

        <div id="createPostButton"
          class="pl-3 pt-1 mt-2 mb-2 text-[rgb(186,220,157)] hover:text-[rgb(124,238,24)] font-bold"
        >
          <button
            class="bg-[rgb(96,96,96)] hover:bg-[rgb(128,128,128)] w-[99%] h-9 rounded-md pl-2 transition duration-700 ease-in-out "
          >
            Create
          </button>
        </div>

        
      </div>
    </div>
    <script src="/js/createPost.js"></script>

</section>